<div class="container mt-4 p-2 col-12">
  <div class="listes">

    <h1 class="text-center"><%= t 'pages.home.lists', locale: locale %></h1>
    <hr>

    <% @lists.where(public: true).each do |item| %>
      <%= link_to list_path(item, locale: I18n.locale) do %>
        <div class="d-flex justify-content-center align-items-center">
          <%= render 'shared/card', item: item %>
        </div>
      <% end -%>
    <% end %>

  </div>
  <br>
  <br>

  <div class="songs">
    <h1 class="text-center"><%= "#{t('pages.home.songs', locale: locale)}" %></h1>
    <hr>

    <% @songs.where(public: true).each do |item| %>
      <%= link_to song_path(item, locale: I18n.locale) do %>
        <%= render 'shared/card', item: item %>
      <% end -%>
    <% end %>
  </div>
</div>
