<div class="container-fond"></div>

<div class="signup">
  <div class="signup-okay justify-content-center">
<h3 class="text-center"><%= t '.change_your_password', locale: locale %></h3>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name, locale: locale), html: { method: :put, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "#{t '.new_password', locale: locale}" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <fieldset class="password">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </fieldset>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "#{t '.confirm_new_password', locale: locale}" %><br />
    <fieldset class="password">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </fieldset>
  </div>

  <div class="actions">
    <%= f.submit "#{t '.change_my_password', locale: locale}", class: "croyable" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
