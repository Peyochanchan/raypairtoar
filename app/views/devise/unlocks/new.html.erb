<h2><%= t '.resend_unlock_instructions', locale: locale %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name, locale: locale), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "#{t '.resend_unlock_instructions', locale: locale}", class: 'croyable' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
